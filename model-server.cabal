Cabal-Version:  >= 1.8

Executable model-server
  Main-is: model-server.hs
  hs-source-dirs: exe
  Build-Depends: base == 4.*, 
                 mtl == 2.*, 
                 yesod == 0.9.*, 
                 yesod-core == 0.9.*, 
                 bytestring == 0.9.*, 
                 enumerator == 0.4.*, wai-extra, wai, model-server,
                 model-type, containers, 
                 acid-state == 0.4.*
